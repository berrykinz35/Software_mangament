# Function to initialize the database
def login_database():
    conn = sqlite3.connect('users.db')
    c = conn.cursor()
    c.execute('''CREATE TABLE IF NOT EXISTS users
                 (username TEXT , password TEXT)''')
    conn.commit()
    conn.close()
login_database()

# Function to add an user
def register_user(userName, password):
    conn = sqlite3.connect('users.db')
    c = conn.cursor()
    c.execute("INSERT INTO users (username, password) VALUES (?, ?)", (userName, password))
    conn.commit()
    conn.close()

# Function to handle the 'Register' button click event
def register_click():
    username = username_entry.get()
    password = password_entry.get()
    confirm_password = confirm_password_entry.get()
    if password == confirm_password:
        if username and password:
            register_user(username, password)
            username_entry.delete(0, tk.END)
            password_entry.delete(0, tk.END)
            confirm_password_entry.delete(0, tk.END)
        else:
            messagebox.showerror("Error", "Please fill in all fields.")
    else:
        messagebox.showerror("Error", "Passwords do not match.")



def login(user,password):
    conn = sqlite3.connect('users.db')
    c = conn.cursor()
    select_query = 'SELECT username, password FROM users WHERE username = ?;'
    try:
        c.execute(select_query, (user,))
        value = c.fetchone()
        if value:
            stored_username,stored_password = value
            if password == stored_password:
                print("Login Successful!")
            else:
                print("Incorrect password.")
        else:
            print("User not found. Login failed.")

    except Exception as e:
        print(f"An error occurred: {str(e)}")
        print(f"Please try again")

    finally:
        c.close()
        conn.close()

def login_click():
    a = username_entry.get()
    b = password_entry.get()
    login(a,b)
